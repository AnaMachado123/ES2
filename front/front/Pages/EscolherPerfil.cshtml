@page
@model front.Pages.EscolherPerfilModel
@{
    ViewData["Title"] = "Escolher Perfil";
}

<div class="min-h-screen bg-[url('/images/background.png')] bg-cover bg-center flex items-center justify-center px-6 py-20">
    <div class="max-w-7xl w-full bg-white bg-opacity-90 rounded-2xl shadow-xl p-10 space-y-12">

        <!-- TOPO: Texto + Imagem lado a lado -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <!-- Texto dentro de um card verde -->
            <div>
                <div class="bg-green-700 text-white px-6 py-6 rounded-xl shadow space-y-3 text-center">
                    <h2 class="text-3xl md:text-4xl font-extrabold">
                        Escolha o tipo de conta
                    </h2>
                    <p class="text-sm md:text-base leading-relaxed">
                        Selecione o perfil que melhor se adequa às suas funções na plataforma. <br />
                        Cada tipo tem permissões específicas para colaborar, gerir ou administrar os projetos da equipa.
                    </p>
                </div>
            </div>

            <!-- Imagem -->
            <div class="text-center">
                <img src="/images/perfil-illustration.png"
                     alt="Ilustração de escolha de perfil"
                     class="w-full max-w-md mx-auto" />
            </div>
        </div>

        <!-- LINHA DE BAIXO: Cards com efeito -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

            <!-- Utilizador Normal -->
            <div class="group bg-white rounded-xl shadow-lg p-6 border border-gray-200
                        hover:bg-green-700 hover:text-white transition text-center 
                        transform hover:scale-105 transition-transform duration-300">
                <h3 class="text-xl font-bold text-green-800 group-hover:text-white mb-2">Utilizador Normal</h3>
                <p class="text-sm text-gray-600 group-hover:text-white mb-4">
                    Participa em projetos atribuídos por outros. Pode gerir as suas tarefas e consultar os projetos onde está envolvido.
                </p>
                <a href="/Register?tipo=regular"
                   class="bg-white text-green-700 py-2 px-6 rounded-full font-semibold group-hover:bg-white group-hover:text-green-800 transition">
                    Criar como Utilizador
                </a>
            </div>

            <!-- User Manager -->
            <div class="group bg-white rounded-xl shadow-lg p-6 border border-gray-200
                        hover:bg-green-700 hover:text-white transition text-center 
                        transform hover:scale-105 transition-transform duration-300">
                <h3 class="text-xl font-bold text-green-800 group-hover:text-white mb-2">User Manager</h3>
                <p class="text-sm text-gray-600 group-hover:text-white mb-4">
                    Pode criar e gerir projetos, atribuir utilizadores, e acompanhar o progresso geral das tarefas da equipa.
                </p>
                <a href="/Register?tipo=manager"
                   class="bg-white text-green-700 py-2 px-6 rounded-full font-semibold group-hover:bg-white group-hover:text-green-800 transition">
                    Criar como Gestor
                </a>
            </div>

            <!-- Administrador -->
            <div class="group bg-white rounded-xl shadow-lg p-6 border border-gray-200
                        hover:bg-green-700 hover:text-white transition text-center 
                        transform hover:scale-105 transition-transform duration-300">
                <h3 class="text-xl font-bold text-green-800 group-hover:text-white mb-2">Administrador</h3>
                <p class="text-sm text-gray-600 group-hover:text-white mb-4">
                    Acede a todas as funcionalidades do sistema. Pode criar, editar e remover utilizadores, gerir permissões e supervisionar toda a plataforma.
                </p>
                <a href="/Register?tipo=admin"
                   class="bg-white text-green-700 py-2 px-6 rounded-full font-semibold group-hover:bg-white group-hover:text-green-800 transition">
                    Criar como Admin
                </a>
            </div>

        </div>
    </div>
</div>
