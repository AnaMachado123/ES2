@page "/login"
@model front.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar Sessão";
    var logout = Request.Query["logout"];
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: none;
    }
</style>

<div class="fixed inset-0 bg-[url('/images/background.png')] bg-cover bg-center z-0"></div>

<div class="relative z-10 min-h-screen flex items-center justify-center">
    <div class="bg-white bg-opacity-90 p-10 rounded-2xl shadow-lg w-full max-w-md">

        @* Mensagem de logout *@
        @if (logout == "true")
        {
            <div class="mb-4 px-4 py-3 rounded text-green-800 bg-green-100 border border-green-300 text-sm font-medium">
                Sessão terminada com sucesso!
            </div>
        }

        <h2 class="text-2xl font-bold text-green-800 mb-6 text-center">Bem-vindo(a)</h2>

        <form method="post" class="space-y-4">
            <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>

            <div>
                <label asp-for="Email" class="block text-gray-700 font-semibold">Email</label>
                <input asp-for="Email" type="email"
                       class="w-full px-4 py-2 rounded-xl border border-gray-300 focus:ring-green-600 focus:border-green-600 outline-none" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-gray-700 font-semibold">Password</label>
                <input asp-for="Password" type="password"
                       class="w-full px-4 py-2 rounded-xl border border-gray-300 focus:ring-green-600 focus:border-green-600 outline-none" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-green-700 text-white rounded-xl font-semibold hover:bg-green-800 transition">Entrar</button>
        </form>

        <p class="mt-4 text-center text-sm text-gray-600">
            Ainda não tem conta?
            <a href="/register" class="text-green-700 font-medium hover:underline">Regista-te aqui</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
