@page
@model front.Pages.RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
}

<!-- FUNDO -->
<div class="fixed inset-0 w-full h-full bg-[url('/images/background.png')] bg-cover bg-center -z-10"></div>

<!-- CONTEÚDO -->
<div class="relative min-h-screen w-full p-10 z-10">
    <div class="max-w-4xl w-full bg-white bg-opacity-90 rounded-2xl shadow-xl p-10 space-y-12 mx-auto">

        <!-- TOPO: Frase + Imagem -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
            <div>
                <div class="bg-green-700 text-white px-6 py-6 rounded-xl shadow text-center space-y-2">
                    <h2 class="text-3xl md:text-4xl font-extrabold">
                        Crie a sua conta
                    </h2>
                    <p class="text-sm md:text-base leading-relaxed">
                        Crie a sua conta e junte-se à gestão moderna de projetos. <br />
                        Simples, eficaz e pronta para o seu sucesso.
                    </p>
                </div>
            </div>
            <div class="text-center">
                <img src="/images/perfil-illustration.png"
                     alt="Ilustração de registo"
                     class="w-full max-w-md mx-auto" />
            </div>
        </div>

        <!-- FORMULÁRIO VERTICAL -->
        <form method="post" class="flex flex-col gap-4">
            <div>
                <label class="block text-sm font-medium text-green-900">Nome</label>
                <input asp-for="Nome" class="w-full px-4 py-2 border rounded" />
            </div>

            <div>
                <label class="block text-sm font-medium text-green-900">Email</label>
                <input asp-for="Email" class="w-full px-4 py-2 border rounded" />
            </div>

            <div>
                <label class="block text-sm font-medium text-green-900">Palavra-passe</label>
                <input asp-for="Password" type="password" class="w-full px-4 py-2 border rounded" />
            </div>

            <!-- Tipo de utilizador forçado para "User" -->
            <input type="hidden" asp-for="TipoPerfil" value="User" />

            <button type="submit" class="w-full bg-green-800 hover:bg-green-700 text-white py-2 rounded mt-2">
                Criar Conta
            </button>
        </form>
    </div>
</div>
