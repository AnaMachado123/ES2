@page
@model front.Pages.AddProjectModel

@{
    ViewData["Title"] = "Adicionar Projeto";
}

<div class="min-h-screen bg-[url('/images/background.png')] bg-cover bg-center flex items-center justify-center p-6">
    <div class="bg-white bg-opacity-90 p-8 rounded-2xl shadow-lg w-full max-w-2xl">
        <h2 class="text-2xl font-bold text-green-800 text-center mb-6">Adicionar Novo Projeto</h2>

        @if (!string.IsNullOrEmpty(Model.Mensagem))
        {
            <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-2 rounded mb-4">
                @Model.Mensagem
            </div>
        }

        <form method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-semibold text-gray-700">Nome do Projeto</label>
                    <input asp-for="Nome" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">Preço/Hora (€)</label>
                    <input asp-for="Precohora" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">ID do Cliente</label>
                    <input asp-for="Clienteid" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                </div>

                <div>
                    <label class="block text-sm font-semibold text-gray-700">ID do Utilizador</label>
                    <input asp-for="Utilizadorid" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                </div>
            </div>

            <hr class="my-4" />

            <h3 class="text-lg font-bold text-green-700">Tarefas Associadas</h3>

            <div id="tarefasContainer" class="space-y-3">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                    <input type="text" placeholder="Descrição" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                    <input type="datetime-local" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                    <input type="datetime-local" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                </div>
            </div>

            <button type="button" onclick="adicionarTarefa()" class="text-sm text-blue-600 hover:underline mt-2">
                + Adicionar mais uma tarefa
            </button>

            <div>
                <button type="submit"
                        class="w-full bg-green-700 text-white py-2 px-4 rounded-xl font-semibold hover:bg-green-800 transition duration-300 mt-4">
                    Criar Projeto
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function adicionarTarefa() {
            const container = document.getElementById("tarefasContainer");
            const bloco = document.createElement("div");
            bloco.className = "grid grid-cols-1 md:grid-cols-3 gap-3 mt-2";
            bloco.innerHTML = `
                <input type="text" placeholder="Descrição" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                <input type="datetime-local" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
                <input type="datetime-local" class="mt-1 block w-full rounded-xl border border-gray-300 px-4 py-2 focus:outline-none focus:ring-green-600 focus:border-green-600 shadow-sm" />
            `;
            container.appendChild(bloco);
        }
    </script>
}
