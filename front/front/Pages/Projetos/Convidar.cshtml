@page "{ProjetoId:int}"
@model front.Pages.Projetos.ConvidarModel
@{
    ViewData["Title"] = "Convidar Utilizador";
}

<div class="max-w-4xl mx-auto p-6 bg-white rounded-xl shadow-md mt-8">
    <h2 class="text-2xl font-bold text-green-700 mb-4">Convidar Utilizador</h2>

    @if (!string.IsNullOrEmpty(Model.Mensagem))
    {
        <div class="bg-blue-100 border border-blue-300 p-3 rounded text-blue-800 mb-4">
            @Model.Mensagem
        </div>
    }

    <table class="w-full text-left">
        <thead>
            <tr>
                <th class="p-2">Nome</th>
                <th class="p-2">Email</th>
                <th class="p-2">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Utilizadores)
            {
                <tr class="border-t">
                    <td class="p-2">@u.Nome</td>
                    <td class="p-2">@u.Email</td>
                    <td class="p-2">
                        <form method="post">
                            <input type="hidden" name="utilizadorId" value="@u.Id" />
                            <button class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700">Convidar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Projetos" class="text-green-700 hover:underline mt-6 inline-block">← Voltar aos Projetos</a>
</div>
