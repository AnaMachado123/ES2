@page "{ProjetoId:int}"
@model front.Pages.Projetos.ConvidarModel
@{
    ViewData["Title"] = "Convidar Utilizador";
}

<!-- FUNDO FIXO -->
<div class="fixed inset-0 w-full h-full bg-[url('/images/background.png')] bg-cover bg-center -z-10"></div>

<!-- CONTEÚDO -->
<div class="relative min-h-screen w-full p-10 z-10">
    <div class="max-w-4xl mx-auto bg-white bg-opacity-90 p-8 rounded-xl shadow-md">
        <h2 class="text-2xl font-bold text-green-700 mb-4">Convidar Utilizador</h2>

        @if (!string.IsNullOrEmpty(Model.MensagemConvite))
        {
            <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-2 rounded mb-4">
                @Model.MensagemConvite
            </div>
        }

        <table class="w-full text-left">
            <thead class="bg-green-100 text-green-800">
                <tr>
                    <th class="p-2">Nome</th>
                    <th class="p-2">Email</th>
                    <th class="p-2">Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Utilizadores)
                {
                    <tr class="border-t border-gray-200 hover:bg-gray-50 transition">
                        <td class="p-2">@u.Nome</td>
                        <td class="p-2">@u.Email</td>
                        <td class="p-2">
                            <form method="post">
                                <input type="hidden" name="utilizadorId" value="@u.Id" />
                                <button class="bg-green-600 text-white px-3 py-1 rounded hover:bg-green-700 transition">
                                    Convidar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Projetos" class="text-green-700 hover:underline mt-6 inline-block">← Voltar aos Projetos</a>
    </div>
</div>
