@page "{id:int}"
@model front.Pages.Projetos.EditarModel
@{
    ViewData["Title"] = "Editar Projeto";
    ViewData["ActivePage"] = "Projetos";
}

<div class="min-h-screen bg-[url('/images/background.png')] bg-cover bg-center flex items-center justify-center p-10">
    <div class="bg-white bg-opacity-90 p-10 rounded-2xl shadow-xl w-full max-w-2xl">
        <h2 class="text-3xl font-bold text-green-800 mb-8">✏️ Editar Projeto</h2>

        <form method="post">
            <div class="space-y-4">
                <div>
                    <label asp-for="Projeto.Nome" class="block text-sm font-medium text-gray-700">Nome do Projeto</label>
                    <input asp-for="Projeto.Nome" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
                </div>

                <div>
                    <label asp-for="Projeto.Descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
                    <textarea asp-for="Projeto.Descricao" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" rows="4"></textarea>
                </div>

                <div>
                    <label asp-for="Projeto.DataInicio" class="block text-sm font-medium text-gray-700">Data de Início</label>
                    <input asp-for="Projeto.DataInicio" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
                </div>

                <div>
                    <label asp-for="Projeto.Estado" class="block text-sm font-medium text-gray-700">Estado</label>
                    <select asp-for="Projeto.Estado" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
                        <option>Concluído</option>
                        <option>Em Curso</option>
                        <option>A iniciar</option>
                        <option>Em desenvolvimento</option>
                    </select>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="Projeto.ClienteId" class="block text-sm font-medium text-gray-700">Cliente ID</label>
                        <input asp-for="Projeto.ClienteId" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
                    </div>

                    <div>
                        <label asp-for="Projeto.UtilizadorId" class="block text-sm font-medium text-gray-700">Utilizador ID</label>
                        <input asp-for="Projeto.UtilizadorId" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
                    </div>
                </div>
            </div>

            <div class="flex justify-between mt-8">
                <a href="/Projetos" class="bg-gray-300 text-gray-800 px-6 py-2 rounded hover:bg-gray-400">Cancelar</a>
                <button type="submit" class="bg-green-700 text-white px-6 py-2 rounded hover:bg-green-800">Guardar</button>
            </div>
        </form>
    </div>
</div>
