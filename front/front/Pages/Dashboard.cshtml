@page
@model front.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Dashboard";
}

<div class="flex">
    <!-- Sidebar -->
    <partial name="_SideMenu" />

    <!-- Conteúdo principal -->
    <div class="flex-grow p-6 bg-[url('/images/background.png')] bg-cover min-h-screen">

        <h1 class="text-3xl font-bold text-green-700 mb-6">Bem-vindo, @User.Identity?.Name ?? "Utilizador"!</h1>

        <!-- Resumo -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Projetos Ativos</h2>
                <p class="text-2xl font-bold text-green-800">@Model.TotalProjetos</p>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Tarefas Pendentes</h2>
                <p class="text-2xl font-bold text-gray-600">@Model.TarefasPendentes</p>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-700 mb-2">Clientes</h2>
                <p class="text-2xl font-bold text-green-600">@Model.TotalClientes</p>
            </div>
        </div>

        <!-- Projetos Recentes -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-10">
            <h2 class="text-xl font-bold text-green-700 mb-4">Projetos Recentes</h2>
            @if (Model.Projetos != null && Model.Projetos.Any())
            {
                <table class="w-full table-auto text-left">
                    <thead>
                        <tr class="text-gray-600 border-b">
                            <th class="pb-2">Nome</th>
                            <th class="pb-2">Cliente</th>
                            <th class="pb-2">Estado</th>
                            <th class="pb-2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var projeto in Model.Projetos)
                        {
                            <tr class="border-t">
                                <td class="py-2">@projeto.Nome</td>
                                <td class="py-2">@projeto.Cliente</td>
                                <td class="py-2 text-gray-700">@projeto.Status</td>
                                <td class="py-2">
                                    <a href="/Project/Details/@projeto.Id" class="text-blue-600 hover:underline">Ver</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-gray-500">Nenhum projeto encontrado.</p>
            }
        </div>

        <!-- Botão adicionar projeto -->
        <div class="flex justify-end">
            <a href="/AddProject" class="bg-green-700 text-white font-medium px-6 py-3 rounded hover:bg-green-600 flex items-center justify-center gap-2">
                <span class="text-2xl text-white">+</span>
                <span>Novo Projeto</span>
            </a>
        </div>
    </div>
</div>
