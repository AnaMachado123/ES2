@page
@model front.Pages.PerfilEditarModel
@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-cover bg-center" style="background-image: url('/images/background.png');">
    <!-- Aumentando o tamanho do container do formulário -->
    <div class="bg-white bg-opacity-90 p-12 rounded-2xl shadow-lg w-full max-w-5xl h-screen"> <!-- Aumentei o max-w para 5xl e a altura para a tela inteira -->
         <form method="post"> 
        
        <!-- Foto de perfil -->
        <div class="flex justify-center mb-8">
            <img src="url-da-imagem" alt="Foto de Perfil" class="w-32 h-32 rounded-full border-4 border-green-900" />
        </div>

        <h2 class="text-3xl font-semibold mb-8 text-center text-green-900">Editar Perfil</h2>

        <!-- Seção de Informações Pessoais -->
        <div class="space-y-6">
            <h3 class="text-2xl font-semibold text-green-900">Informações Pessoais</h3>

            <div class="flex justify-between">
                <label asp-for="Utilizador.Nome" class="block text-sm font-medium text-gray-700 w-1/3">Nome</label>
                <input asp-for="Utilizador.Nome" class="mt-1 block w-2/3 rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
            </div>

            <div class="flex justify-between">
                <label asp-for="Utilizador.Email" class="block text-sm font-medium text-gray-700 w-1/3">Email</label>
                <input asp-for="Utilizador.Email" class="mt-1 block w-2/3 rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
            </div>

            <div class="flex justify-between">
                <label asp-for="Utilizador.CargaHorariaDiaria" class="block text-sm font-medium text-gray-700 w-1/3">Carga Horária Diária</label>
                <input asp-for="Utilizador.CargaHorariaDiaria" type="number" class="mt-1 block w-2/3 rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
            </div>
        </div>

        <div class="flex justify-between pt-6">
            <button type="submit" class="bg-green-900 text-white px-8 py-3 rounded-lg hover:bg-green-800">Guardar</button>
            <a asp-page="/PerfilVisualizar" class="bg-gray-300 text-gray-800 px-8 py-3 rounded-lg hover:bg-gray-400">Cancelar</a>
        </div>

        <div class="flex justify-between pt-4">
            <button type="submit" class="bg-green-900 text-white px-4 py-2 rounded hover:bg-green-800">Guardar</button>
            <a asp-page="/Dashboard" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400">Cancelar</a>

        </div>
    </form>
</div>
