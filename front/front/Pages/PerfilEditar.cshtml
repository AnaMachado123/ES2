@page
@model front.Pages.PerfilEditarModel
@{
    ViewData["Title"] = "Editar Perfil";
    Layout = "_Layout";
}

<div class="max-w-2xl mx-auto mt-10 bg-white rounded-2xl shadow-lg p-6">
    <h2 class="text-2xl font-semibold mb-6 text-center text-green-900">Editar Perfil</h2>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Utilizador.Nome" class="block text-sm font-medium text-gray-700">Nome</label>
            <input asp-for="Utilizador.Nome" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
        </div>

        <div>
            <label asp-for="Utilizador.Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input asp-for="Utilizador.Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
        </div>

        <div>
            <label asp-for="Utilizador.CargaHorariaDiaria" class="block text-sm font-medium text-gray-700">Carga Horária Diária</label>
            <input asp-for="Utilizador.CargaHorariaDiaria" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-green-900 focus:ring focus:ring-green-200" />
        </div>

        <div class="flex justify-between pt-4">
            <button type="submit" class="bg-green-900 text-white px-4 py-2 rounded hover:bg-green-800">Guardar</button>
            <a asp-page="/PerfilVisualizar" class="bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400">Cancelar</a>

        </div>
    </form>
</div>
