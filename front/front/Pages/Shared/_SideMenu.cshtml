@{
    var active = ViewData["ActivePage"] as string;
}

<div class="h-screen w-64 bg-green-900 bg-opacity-98 backdrop-blur-sm shadow-md flex flex-col justify-between">
    <div>
        <!-- Logo -->
        <div class="px-6 py-5 flex items-center space-x-2 border-b border-green-800">
            <span class="font-semibold text-lg text-white">Serviços & Clientes</span>
        </div>

        <!-- Menu -->
        <nav class="mt-4 flex flex-col gap-2 px-4">

            <a href="/Dashboard"
               class="flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                      @(active == "Dashboard" ? "bg-white text-green-900" : "text-white hover:bg-green-800")">
                <i class="bi bi-house-door-fill"></i> Home
            </a>

            <a href="/Projetos"
               class="flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                      @(active == "Projetos" ? "bg-white text-green-900" : "text-white hover:bg-green-800")">
                <i class="bi bi-folder-fill"></i> Projetos
            </a>

            <a href="/Tarefas"
               class="flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                      @(active == "Tarefas" ? "bg-white text-green-900" : "text-white hover:bg-green-800")">
                <i class="bi bi-check2-square"></i> Tarefas
            </a>

            <a href="/PerfilVisualizar"
               class="flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                      @(active == "Perfil" ? "bg-white text-green-900" : "text-white hover:bg-green-800")">
                <i class="bi bi-person-fill"></i> Perfil
            </a>

            <a href="/Convites/MeusConvites"
               class="flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                      @(active == "Convites" ? "bg-white text-green-900" : "text-white hover:bg-green-800")">
                <i class="bi bi-envelope-fill"></i> Meus Convites
            </a>

        </nav>
    </div>

    <!-- Rodapé com botão -->
    <div class="mt-auto px-4 pb-4 pt-2 border-t border-green-800">
        <form method="get" asp-page="/Logout">
            <button class="w-full text-sm text-white bg-green-800 hover:bg-green-700 py-2 rounded">
                <i class="bi bi-box-arrow-right me-2"></i> Terminar Sessão
            </button>
        </form>

        <div class="text-xs text-center text-white mt-4">
            &copy; 2025 - Gestão de Serviços
        </div>
    </div>
</div>
