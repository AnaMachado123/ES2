@page
@model front.Pages.PerfilVisualizarModel
@{
    ViewData["Title"] = "Perfil do Utilizador";
}

<!-- FUNDO -->
<div class="fixed inset-0 w-full h-full bg-[url('/images/background.png')] bg-cover bg-center -z-10"></div>

<!-- CONTEÚDO -->
<div class="relative min-h-screen p-8 flex items-center justify-center z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start w-full max-w-5xl">

        <!-- Coluna 1: Card do Perfil -->
        <div class="bg-white bg-opacity-90 p-8 rounded-2xl shadow-lg hover:shadow-2xl transition">
            <div class="flex justify-center mb-4">
                <div class="w-20 h-20 rounded-full bg-green-100 flex items-center justify-center shadow-md">
                    <svg class="w-10 h-10 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M5.121 17.804A9.004 9.004 0 0112 15c1.657 0 3.183.507 4.443 1.367M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
            </div>

            <h2 class="text-2xl font-bold text-green-800 text-center mb-6">Meu Perfil</h2>

            <div class="text-sm space-y-4">
                <div>
                    <p class="text-gray-700 font-semibold">Nome</p>
                    <p class="text-lg font-medium">@Model.Utilizador.Nome</p>
                </div>
                <div>
                    <p class="text-gray-700 font-semibold">Email</p>
                    <p class="text-lg font-medium">@Model.Utilizador.Email</p>
                </div>
                <div>
                    <p class="text-gray-700 font-semibold">Carga Horária Diária</p>
                    <p class="text-lg font-medium">@Model.Utilizador.CargaHorariaDiaria horas</p>
                </div>
            </div>

            <div class="flex justify-between mt-6">
                <a href="/PerfilEditar"
                   class="inline-flex items-center gap-2 bg-green-700 text-white px-4 py-2 rounded-xl hover:bg-green-800 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15.232 5.232l3.536 3.536M9 13l6-6m-4 10h4a2 2 0 002-2v-4m-6 6H6a2 2 0 01-2-2v-4m0 0l10-10" />
                    </svg>
                    Editar Perfil
                </a>
                <a href="/Dashboard" class="bg-gray-300 text-gray-800 px-4 py-2 rounded-xl hover:bg-gray-400 transition">Voltar</a>
            </div>
        </div>

        <!-- Coluna 2: Resumo lateral -->
        <div class="space-y-6">
            <div class="bg-green-50 p-6 rounded-2xl shadow w-full">
                <h3 class="text-lg font-semibold text-green-800 mb-4">Resumo</h3>
                <ul class="text-sm space-y-3 text-black">
                    <li class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M3 7v10a1 1 0 001 1h16a1 1 0 001-1V7M3 7l9 6 9-6" />
                        </svg>
                        <strong>3</strong> projetos ativos
                    </li>
                    <li class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <strong>32</strong> horas este mês
                    </li>
                    <li class="flex items-center gap-2">
                        <svg class="w-5 h-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M8 7V3m8 4V3m-9 4h10M5 11h14M5 15h14M5 19h14" />
                        </svg>
                        <strong>4</strong> tarefas em curso
                    </li>
                </ul>
            </div>

            <div class="space-y-3">
                <a href="/RelatorioMensal" class="block bg-green-100 text-black px-4 py-2 rounded hover:bg-green-200 transition flex items-center gap-2">
                    <svg class="h-5 w-5 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8l-6-6z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6" />
                    </svg>
                    Aceder ao Relatório Mensal
                </a>

                <a href="/Dashboard" class="block bg-green-100 text-black px-4 py-2 rounded-xl hover:bg-green-200 transition flex items-center gap-2 shadow-sm">
                    <svg class="h-5 w-5 text-black" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" d="M3 9.75L12 4l9 5.75V20a1 1 0 01-1 1h-5a1 1 0 01-1-1v-5H10v5a1 1 0 01-1 1H4a1 1 0 01-1-1V9.75z" />
                    </svg>
                    Voltar ao Dashboard
                </a>

                <a href="/Tarefas" class="block bg-green-100 text-black px-4 py-2 rounded hover:bg-green-200 transition flex items-center gap-2">
                    <svg class="h-5 w-5 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M9 12h6M9 16h6M9 8h6M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Aceder às Tarefas
                </a>
            </div>
        </div>
    </div>
</div>
