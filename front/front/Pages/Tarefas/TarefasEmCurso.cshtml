@page "/TarefasEmCurso"
@model front.Pages.Tarefas.TarefasEmCursoModel
@{
    ViewData["Title"] = "Tarefas em Curso";

    var tarefas = new[]
    {
        new { Titulo = "Configurar Router", Descricao = "Setup inicial de rede", Inicio = "09:00", Progresso = 70, Projeto = "Gestão de Redes" },
        new { Titulo = "Design UI", Descricao = "Protótipos em Figma", Inicio = "10:30", Progresso = 40, Projeto = "Website IPVC" },
        new { Titulo = "API Integração", Descricao = "Integração com gateway externa", Inicio = "11:45", Progresso = 85, Projeto = "API Financeira" }
    };
}

<!-- FUNDO -->
<div class="fixed inset-0 w-full h-full bg-[url('/images/background.png')] bg-cover bg-center -z-10"></div>

<!-- CONTEÚDO -->
<div class="relative min-h-screen w-full p-10 z-10">
    <div class="max-w-5xl mx-auto bg-white bg-opacity-90 rounded-xl p-8 shadow-lg">
        <h1 class="text-2xl font-bold text-yellow-700 mb-6">Todas as Tarefas em Curso</h1>

        @foreach (var tarefa in tarefas)
        {
            <div class="bg-yellow-100 border-l-4 border-yellow-500 p-5 mb-6 rounded-xl shadow-sm">
                <div class="flex justify-between items-start mb-1">
                    <div>
                        <h3 class="text-lg font-semibold text-yellow-800">@tarefa.Titulo</h3>
                        <p class="text-sm text-yellow-700">@tarefa.Descricao</p>
                        <p class="text-xs italic text-yellow-600">Projeto: @tarefa.Projeto</p>
                    </div>
                    <span class="text-xs text-yellow-700">Início: @tarefa.Inicio</span>
                </div>

                <div class="w-full bg-yellow-200 rounded-full h-2.5 mb-3 mt-2">
                    <div class="bg-yellow-600 h-2.5 rounded-full transition-all duration-500" style="width:@tarefa.Progresso%"></div>
                </div>

                <div class="flex justify-end gap-4 mt-2">
                    <button class="bg-green-600 text-white px-4 py-1 rounded-full text-sm hover:bg-green-700 transition">Concluir</button>
                    <button class="bg-red-500 text-white px-4 py-1 rounded-full text-sm hover:bg-red-600 transition">Remover</button>
                </div>
            </div>
        }
    </div>
</div>
